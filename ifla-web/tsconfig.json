{
  "include": [
    "./**/*.d.ts",
    "./**/*.ts",
    "./**/*.tsx",
    "app/root.jsx",
    "app/components/global/GlobalNotFound.jsx",
    "app/hooks/useAnalytics.js"
, "app/routes/[robots.txt].jsx", "app/routes/[sitemap.xml].jsx", "app/entry.client.jsx", "app/entry.server.jsx", "remix.env.d.ts"  ],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2022",
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "types": ["@shopify/oxygen-workers-types"],
    "paths": {
      "~/*": ["app/*"]
    },

    // Remix takes care of building everything in `./app` with `remix build`.
    // Wrangler takes care of building everything in `./worker` with `wrangler start` / `wrangler publish`.
    "noEmit": true
  }
}
